<!DOCTYPE html>
<html lang="en">

<head>
    <title>เพิ่มสินค้า</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.ckeditor.com/4.14.1/standard/ckeditor.js"></script>
</head>

<body>
    <%- include layout %>
    <% include Admin/header %>
    <div class="container-fluid">

        <div class="row">
            <%- include Admin/dashboard %>
            <div class="col">

                <div class="col-lg-12 my-4">
                    <h1>แบบฟอร์มเพิ่มสินค้า</h1>

                    <% if(locals.errors){ %>
                    <ul class="alert alert-danger">
                        <% Object.values(errors).forEach((error) => {%>
                        <li>
                            <%= error.msg%>
                        </li>
                        <% }) %>
                    </ul>
                    <% } %>

                    <form action="/shop/add" method="post" enctype="multipart/form-data" aria-required="true">
                        <div class="form-group">
                            <label for="">ชื่อสินค้า</label>
                            <input type="text" name="name" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="">รายละเอียดสินค้า</label>
                            <textarea name="description" id="" cols="100" rows="4" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="">ราคา</label>
                            <input type="number" name="price" class="form-control" min="0">
                        </div>
                        <div class="form-group">
                            <label for="">หมวดหมู่</label>
                            <select name="category" class="form-control">
                                <% categories.forEach((category) => { %>
                                <option value="<%= category.name%>"> <%= category.name%></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="">ภาพสินค้า</label>
                            <input type="file" id="" name="photo" class="form-control" required>
                        </div>

                        <input type="submit" class="btn btn-success" value="บันทึกหมวดหมู่">
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        CKEDITOR.replace('description');
    </script>
</body>

</html>