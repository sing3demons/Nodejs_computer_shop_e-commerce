<!DOCTYPE html>
<html lang="en">

<head>
    <title>เพิ่มสินค้า</title>
    <script src="https://cdn.ckeditor.com/4.14.1/standard/ckeditor.js"></script>
</head>

<body>
    <%- include layout %>

    <div class="container-fluid">


        <div class="row">

            <div class="col-lg-12 my-4">
                <h1>แบบฟอร์มแก้ไขสินค้า</h1>
                <% products.forEach(function(product){ %>
                <form action="/shop/admin/update" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="">ชื่อสินค้า</label>
                        <input type="text" name="name" value="<%=product.name %>" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="">รายละเอียดสินค้า</label>
                        <textarea name="description" value="" cols="100" rows="4"
                            class="form-control"><%=product.description%></textarea>
                    </div>

                    <div class="form-group">
                        <label for="">ราคา</label>
                        <input type="number" name="price" value="<%=product.price %>" class="form-control" min="0">
                    </div>
                    <div class="form-group">
                        <label for="">หมวดหมู่</label>
                        <select name="category" class="form-control">
                            <% categories.forEach((category) => { %>
                            <option value="<%= category.name%>"> <%= category.name%></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="">ภาพสินค้า</label>
                        <input type="file" id="" name="photo" class="form-control">
                    </div>
                    <input type="hidden" name="id" value="<%=product._id %>">
                    <input type="submit" class="btn btn-success" value="อัพเดท">
                </form>
                <% }) %>
            </div>
        </div>
    </div>
    <script>
        CKEDITOR.replace('description');
    </script>
</body>

</html>